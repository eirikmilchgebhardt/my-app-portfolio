<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MyAppPortfolio"
    android:background="#ffdfeaf1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="My Nanodegree Apps!"
        android:id="@+id/tvCaption"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spottify Streamer"
        android:id="@+id/butSpotifyStreamer"
        android:background="#F08C35"
        android:layout_marginTop="47dp"
        android:layout_below="@+id/tvCaption"
        android:layout_alignStart="@+id/tvCaption"
        android:layout_alignEnd="@+id/tvCaption"
        android:layout_marginBottom="@dimen/abc_action_bar_content_inset_material" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scores App"
        android:id="@+id/butScoresApp"
        android:background="#F08C35"
        android:layout_below="@+id/butSpotifyStreamer"
        android:layout_alignStart="@+id/butSpotifyStreamer"
        android:layout_alignEnd="@+id/butSpotifyStreamer"
        android:layout_marginBottom="@dimen/abc_action_bar_content_inset_material" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Library App"
        android:id="@+id/butLibraryApp"
        android:background="#F08C35"
        android:layout_below="@+id/butScoresApp"
        android:layout_alignStart="@+id/butScoresApp"
        android:layout_marginBottom="@dimen/abc_action_bar_content_inset_material"
        android:layout_alignEnd="@+id/butScoresApp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Build It Bigger"
        android:id="@+id/butBuildItBigger"
        android:background="#F08C35"
        android:layout_below="@+id/butLibraryApp"
        android:layout_alignStart="@+id/butLibraryApp"
        android:layout_marginBottom="@dimen/abc_action_bar_content_inset_material"
        android:layout_alignEnd="@+id/butLibraryApp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XYZ Reader"
        android:id="@+id/butXYZReader"
        android:background="#F08C35"
        android:layout_below="@+id/butBuildItBigger"
        android:layout_alignStart="@+id/butBuildItBigger"
        android:layout_alignEnd="@+id/butBuildItBigger"
        android:layout_marginBottom="@dimen/abc_action_bar_content_inset_material" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Capstone"
        android:id="@+id/butCapstone"
        android:background="#ffcd103f"
        android:textColor="@android:color/white"
        android:layout_below="@+id/butXYZReader"
        android:layout_alignStart="@+id/butXYZReader"
        android:layout_alignEnd="@+id/butXYZReader"
        android:onClick="displayToast"/>

</RelativeLayout>
